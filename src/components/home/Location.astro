---
import location1 from "@/assets/home/location-1.jpg";
import { Image } from "astro:assets";
---

<section
  id="location"
  class="relative col-span-2 grid grid-cols-subgrid md:col-span-4"
>
  <div class="duotone before:bg-orange-200 after:bg-blue-700 md:col-span-4">
    <Image
      src={location1}
      alt="Badminton court"
      class="h-full max-h-80 object-cover"
    />
  </div>
  <div
    class="space-y-[1em] bg-blue-700/90 p-4 text-white md:absolute md:inset-0 md:col-start-3 md:col-end-5 md:p-8 lg:col-end-4"
  >
    <h2 class="text-2xl md:text-4xl xl:text-6xl">대회장소</h2>
    <p>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloremque hic
      quibusdam cum, fuga.
    </p>
  </div>
</section>
